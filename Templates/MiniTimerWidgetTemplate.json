{
  "type": "AdaptiveCard",
  "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "verticalContentAlignment": "Center",
      "height": "stretch",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${time}",
                  "horizontalAlignment": "Center",
                  "size": "ExtraLarge",
                  "weight": "Bolder",
                  "color": "Default"
                }
              ],
              "verticalContentAlignment": "Center",
              "width": "auto"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "min"
                }
              ],
              "verticalContentAlignment": "Center",
              "width": "auto"
            }
          ],
          "horizontalAlignment": "Center"
        },
        {
          "type": "ActionSet",
          "actions": [
            {
              "type": "Action.Execute",
              "title": "Start",
              "id": "startTimer",
              "style": "positive",
              "$when": "${state == 'stopped'}",
              "isEnabled": true,
              "data": { "id": "startTimer" }
            },
            {
              "type": "Action.Execute",
              "title": "Stop",
              "id": "stopTimer",
              "style": "destructive",
              "$when": "${state == 'stopped'}",
              "isEnabled": false,
              "data": { "id": "stopTimer" }
            },
            {
              "type": "Action.Execute",
              "title": "Pause",
              "id": "pauseTimer",
              "$when": "${state == 'running'}",
              "isEnabled": true,
              "data": { "id": "pauseTimer" }
            },
            {
              "type": "Action.Execute",
              "title": "Stop",
              "id": "stopTimerRunning",
              "style": "destructive",
              "$when": "${state == 'running'}",
              "isEnabled": true,
              "data": { "id": "stopTimer" }
            },
            {
              "type": "Action.Execute",
              "title": "Continue",
              "id": "continueTimer",
              "$when": "${state == 'paused'}",
              "isEnabled": true,
              "data": { "id": "startTimer" }
            },
            {
              "type": "Action.Execute",
              "title": "Stop",
              "id": "stopTimerPaused",
              "style": "destructive",
              "$when": "${state == 'paused'}",
              "isEnabled": true,
              "data": { "id": "stopTimer" }
            }
          ],
          "horizontalAlignment": "Center"
        }
      ]
    }
  ]
}